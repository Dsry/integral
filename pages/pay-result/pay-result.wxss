/* pages/pay-result/pay-result.wxss */

.container {
  text-align: center;
}

.resBg {
  width: 80%;
  margin: 0 auto;
}

.success {
  width: 200rpx;
  height: 203rpx;
  position: absolute;
  top: 240rpx;
  left: 50%;
  transform: translateX(-50%);
}

.pay-sts {
  font-size: 56rpx;
  font-family: FZCuYuan-M03S;
  font-weight: 400;
  color: rgba(245, 87, 63, 1);
  line-height: 139rpx;
  padding: 30rpx 0;
  text-align: center;
  position: absolute;
  top: 85rpx;
  left: 50%;
  transform: translateX(-50%);
}

.pay-sts.fail {
  color: #f43530;
}

.pay-sts.succ {
  color: #19be6b;
}

.btns {
  margin-top: 50rpx;
  text-align: center;
}

.tips {
  margin-top: 68rpx;
  font-size: 33rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(64, 64, 64, 1);
  line-height: 59rpx;
}

.tips .warn {
  color: #f43530;
}

.btns .button {
  width: 320rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  background: rgba(24, 144, 255, 1);
  border-radius: 30rpx;
  margin: 0 auto;
}

.btns .button.checkorder {
  background: #19be6b;
  color: #fff;
  margin-bottom: 20rpx;
  border: 2rpx solid #19be6b;
}

.btns .button.payagain {
  background: #fff;
  border: 2rpx solid #f90;
  color: #f90;
}

.btns .button.shopcontinue {
  background: #fff;
  border: 2rpx solid #19be6b;
  color: #19be6b;
}
